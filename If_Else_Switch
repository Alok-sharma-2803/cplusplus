#include <iostream>
#include <typeinfo>
#include <string>
using namespace std;

int main()
{
//	Create 3 'if' statements with '1', true and false as the arguments, but do nothing
	if(1);
	if(true);
	if(false);
	
//	Create 3 'if' 'else if' statements that check an int to see if it's >, == or < 0. Then output each as a statement ("5 > 0").
	int x1 = 5;
	int x2 = 0;
	int x3 = -15;
	
	if (x1 > 0)
		cout << x1 << " > 0." << '\n' << endl;
	else if (x1 == 0)
		cout << x1 << " == 0." << '\n' << endl;
	else if (x1 < 0)
		cout << x1 << " < 0." << '\n' << endl;
	
	if (x2 > 0)
		cout << x2 << " > 0." << '\n' << endl;
	else if (x2 == 0)
		cout << x2 << " == 0." << '\n' << endl;
	else if (x2 < 0)
		cout << x2 << " < 0." << '\n' << endl;
	
	if (x3 > 0)
		cout << x3 << " > 0." << '\n' << endl;
	else if (x3 == 0)
		cout << x3 << " == 0." << '\n' << endl;
	else if (x3 < 0)
		cout << x3 << " < 0." << '\n' << endl;
	
//	Create an 'if else' statement that checks if a variable is odd/even, and output just that along with lots of other random days of the week in a block of code using {}
	int y1 = 4;
	int y2 = 3;
	
	if (y1%2 == 0)
		cout << y1 << " is even" << '\n' << endl;
	else
		cout << y1 << " is odd" << '\n' << endl;
	
	if (y2%2 == 0)
		cout << y2 << " is even" << '\n' << endl;
	else
		cout << y2 << " is odd" << '\n' << endl;
	
//	Create a conditional operator that checks if a number is odd, and then outputs just that
	int z = 5;
	cout << z << (z % 2 != 0 ? " is an odd number" : " is an even number") << '\n' << endl;
	
//	Create a conditional operator that checks if a number is positive, and returns "ham" or "toast" which is stored in a string variable
	int z1 = -4;
	string s1 = (z1 > 0 ? "ham": "toast");
	cout << s1 << '\n' << endl;
	
//	Create a conditional operator that checks if one variable is greater than another, and outputs which variable was greater
	int var1 = 45,
		var2 = 54;
	var1 == var2 ? (cout << "Both the variables are equal" << '\n' << endl) : (cout << (var1 > var2 ? var1 : var2) << " is greater than " << (var1 > var2 ? var2 : var1) << '\n' << endl);
	
//	Create a switch statement that has 3 different char cases and outputs which letter it is. do not include breaks
	char char_1 = 'a';
	switch(char_1){
		case 'a':
			cout << 'a' << '\n' << endl;
		case 'b':
			cout << 'b' << '\n' << endl;
		case 'c':
			cout << 'c' << '\n' << endl;
	}
	
//	Repeat above but use numbers, include breaks, and add a 'default'
	int int_1 = 21;
	switch(int_1){
		case 20:
			cout << 20 << '\n' << endl;
			break;
		case 21:
			cout << 21 << '\n' << endl;
			break;
		case 22:
			cout << 22 << '\n' << endl;
			break;
		default:
			cout << int_1 << '\n' << endl;
	}
	
	
	
	return 0;
};
